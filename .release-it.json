{
  "git": {
    "requireCleanWorkingDir": false,
    "commit": false,
    "tag": false,
    "push": false
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": [
      "pnpm changeset version",
      "git add .",
      "git commit -m 'chore: version packages' || true",
      "pnpm install",
      "pnpm build"
    ],
    "after:release": [
      "git tag v$(node -p \"require('./packages/react/package.json').version\")",
      "git push --follow-tags",
      "pnpm -r publish --access public"
    ]
  }
}
